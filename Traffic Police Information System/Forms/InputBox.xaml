<Window x:Class="Traffic_Police_Information_System.Forms.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traffic_Police_Information_System.Forms"
        mc:Ignorable="d"
        Title="Добавление элемента" Height="150" Width="300" Background="IndianRed" Icon="/Images/Icons/icon_GAI.ico" ResizeMode="NoResize" Loaded="Window_Loaded">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Название"/>
        <TextBox x:Name="TB_Text" Width="250"/>
        <Button Content="Сохранить" Height="25" Width="100" FontSize="14" Margin="0,15,0,0" Click="Button_Click"/>
    </StackPanel>
</Window>
